                    <TextBlock Text="Inicio" 
                               FontSize="20"
                               Padding="40, 20, 20, 20" />
                    <TextBlock Text="Inicio" 
                               FontSize="20"
                               Padding="40, 20, 20, 20" />
                </StackPanel>
      
                <Rectangle x:Name="Second" 
                           Grid.Row="0"
                           Grid.Column="1"
                           Fill="#FFD11A1A" 
                           VerticalAlignment="Stretch" 
                           HorizontalAlignment="Stretch" />            
            </Grid>
        </StackPanel>
    </ScrollViewer>
    
    
